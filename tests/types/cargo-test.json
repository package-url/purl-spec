{
  "$schema": "https://packageurl.org/schemas/purl-test.schema-1.0.json",
  "tests": [
    {
      "description": "Parse test for PURL type: cargo",
      "test_group": "base",
      "test_type": "parse",
      "input": "pkg:cargo/rand@0.7.2",
      "expected_output": {
        "type": "cargo",
        "namespace": null,
        "name": "rand",
        "version": "0.7.2",
        "qualifiers": null,
        "subpath": null
      },
      "expected_failure": false,
      "expected_failure_reason": null
    },
    {
      "description": "Roundtrip test for PURL type: cargo",
      "test_group": "base",
      "test_type": "roundtrip",
      "input": "pkg:cargo/rand@0.7.2",
      "expected_output": "pkg:cargo/rand@0.7.2",
      "expected_failure": false,
      "expected_failure_reason": null
