      "test_group": "base",
      "test_type": "parse",
      "input": "pkg:cpan/DROLSKY/DateTime@1.55?repository_url=backpan.perl.org",
      "expected_output": {
        "type": "cpan",
        "namespace": "DROLSKY",
        "name": "DateTime",
        "version": "1.55",
        "qualifiers": {
          "repository_url": "backpan.perl.org"
        },
        "subpath": null
      },
      "expected_failure": false,
      "expected_failure_reason": null
    },
    {
      "description": "Build test for PURL type: cpan",
      "test_group": "base",
      "test_type": "build",
      "input": {
        "type": "cpan",
        "namespace": "DROLSKY",
        "name": "DateTime",
        "version": "1.55",
        "qualifiers": {
          "repository_url": "backpan.perl.org"
        },
        "subpath": null
      },
      "expected_output": "pkg:cpan/DROLSKY/DateTime@1.55?repository_url=backpan.perl.org",
      "expected_failure": false,
      "expected_failure_reason": null
    }
  ]
}
